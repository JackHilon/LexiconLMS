@model LexiconLMS.Models.Document

@{
    ViewData["Title"] = "View";
}

<h2>Document</h2>
<h3>Are you sure you want to delete this?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DocumentName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DocumentName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UploadDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UploadDate)
        </dd>
    </dl>

    <form asp-action="DelDoc" asp-controller="Document" asp-route-id="@Model.DocumentId">
        <input type="hidden" asp-for="DocumentId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |

        @{
            switch (Model.Related)
            {
                case "Course":
                    <a asp-controller="Courses" asp-action="Index">Back to List</a>
                    break;
                case "Module":
                    <a asp-controller="Courses" asp-action="Details" asp-route-id="@Model.CourseId">Back to List</a>
                    break;
                default:
                    <a asp-controller="Modules" asp-action="ActivityPartialView" asp-route-id="@Model.ModuleId">Back to List</a>
                    break;
            }
        }
        <a asp-action="Index">Back to List</a>
    </form>
</div>
