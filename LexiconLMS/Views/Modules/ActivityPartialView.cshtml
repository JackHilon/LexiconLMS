
@model LexiconLMS.ViewModels.ModuleActivityViewModel

@{
    ViewData["Title"] = "ModuleActivity";
}


    <div>
        
        <div class="tab-pane container fade p-0" id="menu1">
            <h1>Activity</h1>
            <p>
                <a asp-controller="ModuleActivities" asp-action="Create">Add New Activity</a> |
            </p>
            <h5 class="text-uppercase p-2 text-center">List of Activities</h5>
            <table class="table table-bordered table-striped">
                <thead class="thead-dark text-white">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Activities.FirstOrDefault().Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Activities.FirstOrDefault().Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Activities.FirstOrDefault().StartDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Activities.FirstOrDefault().EndDate)
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Activities)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => @item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => @item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => @item.StartDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => @item.EndDate)
                            </td>
                            <td>

                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary  active" role="button">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary  active" role="button">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-success  active" role="button">Delete</a>
                                <a asp-action="Index" asp-controller="Document" asp-route-id="@item.Id" class="btn btn-info  active" role="button">Upload a file</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
