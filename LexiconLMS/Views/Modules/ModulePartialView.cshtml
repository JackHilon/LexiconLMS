@model IEnumerable<LexiconLMS.Models.Module>
@{
    ViewData["Title"] = "ModuleActivity";
}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css">


    <h1 class="p-md-2 bg-secondary text-white   active rounded-lg">Course @TempData["CourseName"]</h1> 

    <p>
        <a class="btn btn-outline-info" asp-action="Create">Add New Module</a>
            <a class="btn btn-outline-secondary float-right" asp-controller="Courses" asp-action="Index">Back</a>
    </p>
   
            <h5 class="text-uppercase p-2 text-center rounded-lg bg-info text-white" >List of Modules</h5>

            <table class="table table-striped text-md-left table-responsive-sm">
                <thead class="bg-dark text-white">
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Start Date</th>
                        <th>   </th>
                        <th>Document</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => @item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => @item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => @item.StartDate)
                            </td>
                            @*<td>
                                @Html.DisplayFor(modelItem => @item.Course.CourseName)
                            </td>*@
                            <td class="btn-group">
                                <a class="btn btn-sm btn-secondary text-white" id="ActivityButton" name="@item.Id">Activities</a> 
                                <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                                <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">Details</a> 
                                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                                  <td>
                                
                                     @if (@item.Documents.FirstOrDefault() != null)
                                     {

                                    
                                         @Html.DisplayFor(modelItem => @item.Documents.FirstOrDefault().DocumentName)
                                    <form asp-action="DownLoadFile" asp-route-id="@item.Documents.FirstOrDefault().DocumentId" asp-controller="Document" id="Form1">
                                        <button type="submit" class="btn btn-warning" data-toggle="modal" data-target="#DownConfirmationModal" id="Download">
                                            <i class="fa fa-download"></i>
                                        </button>
                                    </form>
                                         }

                                  else if(@item.Documents.FirstOrDefault() == null)
                                {


                                    <form class="float-left" asp-controller="Document" asp-action="UploadFile" asp-route-id="@item.Id" asp-route-Related="Module" method="post"
                                          enctype="multipart/form-data" style="display: inline-block">

                                        <button type="submit" class="btn  btn-outline-secondary center-block" data-toggle="modal" data-target="#upConfirmationModal">
                                            <i class="fa fa-upload"></i> </button>
                                        <input type="file" name="file" class="btn btn-secondary  active" role="button" />
                                        
                                    </form>

                                }
                                
                           </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div id="ActivityForModule">

        </div>
        <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
        <script type="text/javascript">
                    $(document).ready(function () {
            $('[id*=ActivityButton]').on('click', function () {
                    $.ajax({
                        // Get  Activity PartialView
                        url: '@Url.Action("ActivityPartialView", "Modules")',
                        type: 'GET',
                        data: { "id": $(this).attr('name') },
                        success: function (response) {
                            $('#ActivityForModule').html(response);
                        },
                        error: function (error) {
                            alert("Error: Please try again.");
                        }
                    });
                });
                });
        </script>
        <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
        <script type="text/javascript">
            $("body").on("submit", "#Form1", function () {
                return confirm("Dowloaded Sucessfully!!!");
            });
        </script>


    </div>
</div>
