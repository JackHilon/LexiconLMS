@model IEnumerable<LexiconLMS.Models.Module>
@{
    ViewData["Title"] = "ModuleActivity";
}
<!-- <h1>Module</h1> -->

<p>
    <a asp-action="Create">Add New Module</a>
</p>
<div>
    <div class="tab-content">
        <div class="tab-pane container active p-0" id="home">
            <h5 class="text-uppercase p-2 text-center">List of Modules</h5>
            <table class="table table-bordered table-striped">
                <thead class="thead-dark text-white">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StartDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Course)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => @item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => @item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => @item.StartDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => @item.Course.CourseName)
                            </td>
                            <td>
                                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                <a class="btn btn-primary" id="ActivityButton" name="@item.Id" >Activities</a> |
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div id="ActivityForModule">
         
        </div>
        <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
        <script type="text/javascript">
                    $(document).ready(function () {
            $('[id*=ActivityButton]').on('click', function () {
                    $.ajax({
                        // Get  Activity PartialView
                        url: '@Url.Action("ActivityPartialView", "Modules")',
                        type: 'GET',
                        data: { "id": $(this).attr('name') },
                        success: function (response) {
                            $('#ActivityForModule').html(response);
                        },
                        error: function (error) {
                            alert("Error: Please try again.");
                        }
                    });
                });
                });
        </script>



