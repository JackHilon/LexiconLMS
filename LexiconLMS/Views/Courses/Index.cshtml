@model IEnumerable<LexiconLMS.Models.Course>

@{
    ViewData["Title"] = "Index";
}

<h1>Teacher</h1>

<nav class="container">
        
            <ul class="text-right"> 
                <li class="btn-group">
                        <a asp-action="Create" class="btn btn-primary  active" role="button">Add New Course</a>
                </li>
                <li class="btn-group">

                    <a asp-action="ListOfTeachers" class="btn btn-danger  active" role="button" >List All Teachers</a>
                </li>
                
            </ul>
   
</nav>
<br>
<h2>All Courses</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                <!-- @Html.DisplayNameFor(model => model.CourseName)-->
                <p>Course Name</p>
            </th>
            <th>
                <!--@Html.DisplayNameFor(model => model.CourseDescription)-->
                <p>Course Description</p>
            </th>
            <th>
                <!--  @Html.DisplayNameFor(model => model.StartDate)-->
                <p>Start Date</p>
            </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <!--@Html.DisplayFor(modelItem => item.CourseName)-->
                        <p>Course Name</p>
                    </td>
                    <td>
                        <!-- @Html.DisplayFor(modelItem => item.CourseDescription)-->
                        <p>Course Description</p>
                    </td>
                    <td>
                        <!-- @Html.DisplayFor(modelItem => item.StartDate)-->
                        <p>Start Date</p>
                    </td>
                    <td>
                        <a class="btn btn-secondary">Students</a>
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.CourseId">Details</a>
                        <a class="btn btn-outline-secondary" asp-action="Edit" asp-route-id="@item.CourseId">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CourseId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
