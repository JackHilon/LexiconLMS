@model LexiconLMS.ViewModels.StudentListAndCourseName

    @{
    ViewData["Title"] = "ListOfCourseStudents";
    }

    <h1>List of @Html.DisplayFor(m => m.CourseName) Course Students</h1>

    <nav class="navbar navbar-expand-sm bg-light">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a asp-area="Identity" asp-page="/Account/Register" asp-route-roleName="Student"  class="btn btn-secondary btn-lg active" role="button">Add New Student</a>
            </li>
        </ul>
    </nav>
    <br>


    @if (Model.Students.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Students.First().Name)</th>
                <th>
                    @Html.DisplayNameFor(model => model.Students.First().Email)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Students)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>

                <td>

                    <a class="btn btn-outline-secondary" asp-action="EditUser" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-danger" asp-action="DeleteUser" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>

}

